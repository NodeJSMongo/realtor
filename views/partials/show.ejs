  <div class="w3-bar w3-black">
    <button class="w3-bar-item w3-button" onclick="openCity('London<%= index %>')"> <small>Details</small></button>
    <button class="w3-bar-item w3-button" onclick="openCity('Paris<%= index %>')"> <small>Comments</small> </button>
    <button class="w3-bar-item w3-button" onclick="openCity('Tokyo<%= index %>')"> <small>Contact</small> </button>
  </div>

  <div id="London<%= index %>" class="w3-container w3-display-container city" style="display:none; padding:.2rem 0 .2rem .5rem;">
    <span onclick="this.parentElement.style.display='none'"
    class="w3-button w3-large w3-display-topright">&times;</span>
    <small><b>Location:</b>  <%=property.area %> , <%=property.city %></small> <br>
    <small><b>Property type:</b>  <%=property.exteriortype %> , <%=property.propertyclass %></small> <br>
    <small><b>Property For: </b>  <%=property.sale %></small> <br>
    <small><b>Asking price: </b>
              <%
              if( property.originalprice === undefined){
                %>
                Tk.<%= property.listprice %>/-
              <% }else{ %>
                Tk.<%= property.originalprice %>/-
              <% } %></small>
  </div>

  <div id="Paris<%= index %>" class="w3-container w3-display-container city" style="display:none; padding:.2rem 0 .2rem .5rem;">
    <span onclick="this.parentElement.style.display='none'"
    class="w3-button w3-large w3-display-topright">&times;</span>

    <small><b>Commons: </b>  <%=property.remarkforclients %></small>
  </div>

  <div id="Tokyo<%= index %>" class="w3-container w3-display-container city" style="display:none; padding:.2rem 0 .2rem .5rem;">
    <span onclick="this.parentElement.style.display='none'"
    class="w3-button w3-large w3-display-topright">&times;</span>
    <small><b>Commons: </b>  <%= property.remarkforclients %></small>
  </div>


    <script>
    function openCity(cityName) {
      var i;
      var x = document.getElementsByClassName("city");
      for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
      }
      document.getElementById(cityName).style.display = "block";
    }
</script>
